# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.{js,ts}]
indent_size = 2
indent_style = space

# 4 space indentation
[*.{py,sol}]
indent_style = space
indent_size = 4

[{package.json,.hardhat.config.js}]
indent_style = space
indent_size = 2